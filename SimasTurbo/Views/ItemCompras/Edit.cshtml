@model SimasTurbo.Models.ItemCompra

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<h4>Item Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemCompraId" />
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="PrecoUnit" class="control-label"></label>
                <input asp-for="PrecoUnit" class="form-control" />
                <span asp-validation-for="PrecoUnit" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="CadComprasId" class="control-label"></label>
                <select asp-for="CadComprasId" class="form-control" asp-items="ViewBag.CadComprasId"></select>
                <span asp-validation-for="CadComprasId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn mt-2" style="background-color:#9CC1DD; color:white" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn mt-2" style="background-color:#FB5546; color:white">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
