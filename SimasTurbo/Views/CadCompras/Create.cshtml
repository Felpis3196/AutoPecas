@model SimasTurbo.Models.CadCompras

@{
    ViewData["Title"] = "Criar";
}

<h1>@ViewData["Title"]</h1>

<h4>Compras</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NotaCompra" class="control-label"></label>
                <input asp-for="NotaCompra" class="form-control" />
                <span asp-validation-for="NotaCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataHora" class="control-label"></label>
                <input asp-for="DataHora" class="form-control" />
                <span asp-validation-for="DataHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn mt-2" style="background-color:#9CC1DD; color:white" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn mt-2 " style="background-color:#FB5546; color:white">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
